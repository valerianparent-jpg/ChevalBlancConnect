<script>
    document.addEventListener('DOMContentLoaded', () => {
        const pages = document.querySelectorAll('.page-content');
        // SUPPRESSION de navLinks
        const collectionLink = document.getElementById('link-collection');
        const backLinks = document.querySelectorAll('.back-link');
        
        const destinationCards = document.querySelectorAll('.destination-card');
        const closeModalBtn = document.getElementById('btn-close-modal');
        const confirmBookingBtn = document.getElementById('btn-confirm-booking'); // Nouveau bouton
        const reservationModal = document.getElementById('modal-reservation');
        const reservationModalContent = reservationModal.querySelector('div');
        const modalTitle = document.getElementById('modal-title');
        const timeSlots = document.querySelectorAll('.time-slot');
        const dateSlots = document.querySelectorAll('.date-slot');

        // Function to switch pages
        const showPage = (pageId) => {
            pages.forEach(page => {
                page.classList.add('hidden');
            });
            const activePage = document.getElementById(`page-${pageId}`);
            if (activePage) {
                activePage.classList.remove('hidden');
            }
            
            // SUPPRESSION de la boucle navLinks.forEach
        };

        // Navigation links event listeners
        // SUPPRESSION du bloc navLinks.forEach

        collectionLink.addEventListener('click', (e) => {
            e.preventDefault();
            showPage('collection');
        });

        backLinks.forEach(link => {
            link.addEventListener('click', (e) => {
                e.preventDefault();
                showPage('home'); 
            });
        });
        
        // Modal logic
        const openModal = (destination) => {
            modalTitle.textContent = `Voyage à ${destination}`;
            reservationModal.classList.remove('hidden');
            setTimeout(() => {
                reservationModal.classList.remove('opacity-0');
                reservationModalContent.classList.remove('translate-y-full');
            }, 10);
        };
        
        const closeModal = () => {
            reservationModal.classList.add('opacity-0');
            reservationModalContent.classList.add('translate-y-full');
            setTimeout(() => {
                reservationModal.classList.add('hidden');
            }, 300);
        };

        destinationCards.forEach(card => {
            card.addEventListener('click', () => {
                const destination = card.dataset.destination;
                openModal(destination);
            });
        });

        closeModalBtn.addEventListener('click', closeModal);
        confirmBookingBtn.addEventListener('click', closeModal); // Ferme le modal au clic sur Confirmer
        
        reservationModal.addEventListener('click', (e) => {
            if (e.target === reservationModal) {
                closeModal();
            }
        });
        
        timeSlots.forEach(slot => {
            slot.addEventListener('click', () => {
                timeSlots.forEach(s => s.classList.remove('selected'));
                slot.classList.add('selected');
            })
        });
        
        dateSlots.forEach(slot => {
            slot.addEventListener('click', () => {
                dateSlots.forEach(s => s.classList.remove('selected'));
                slot.classList.add('selected');
            })
        });
    });
</script>

